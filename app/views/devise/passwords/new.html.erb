<div class="container">
  <section id="content">
    <h2>Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', id: 'username' %>
      </div>
      <div>
        <%= f.submit "Send" %>
        <%= link_to "Log in", new_session_path(resource_name) %>
      </div>
    <% end %>  
    
  </section><!-- content -->
</div><!-- container -->
